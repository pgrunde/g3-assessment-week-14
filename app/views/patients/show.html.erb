<h1><%= @patient.first_name %> <%= @patient.last_name %></h1><br/>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<section class="clearfix" id="add-script">
  <h2 class="left">Prescriptions</h2>
  <div class="right"><%= link_to "Add Prescription", new_patient_prescription_path(@patient) %></div>
</section>

<section>
  <table border="2" class="table" >
    <thead>
      <tr>
        <th>Medication</th>
        <th>Dosage / Schedule</th>
        <th>Dates</th>
      </tr>
    </thead>
    <tbody>
    <% @prescriptions.each do |script| %>
      <tr>
        <td><%= script.medication %></td>
        <td><%= script.dosage %> / <%= script.schedule %></td>
        <td><%= script.starts_on %> - <%= script.ends_on %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>